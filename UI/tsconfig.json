{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    //"inlineSourceMap": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom"],
    "outDir": "./lib",
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "src",
    "inlineSources": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "experimentalDecorators": true
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "experimentalDecorators": true,
    "forkChecker": true,
    "useWebpackText": true
  }
}
